{% extends 'base.html.twig' %}
{% block title %} Liste des articles {% endblock %}
{% block body %}
    <h1>{{ title }}</h1>

    <div>
        <ul>
        {% for article in articles %}
            <li><a href="{{ path('article.show',{'uri':article.uri})}}"> {{ article.title }} </a>
                 {% for tag in article.tags %}
                    <span class="tag">
                            {{ tag.name }}
                    </span>
                {% endfor %} 
            </li>
        {% endfor %}
        </ul>
    </div>
{% endblock %}
